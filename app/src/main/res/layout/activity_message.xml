                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="聊天"
                    android:drawableLeft="@mipmap/hint"
                    android:gravity="center_vertical"
                    android:drawablePadding="16dp"
