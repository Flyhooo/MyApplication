<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/Userinfo_userimg_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="click"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_userimg_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userInfo_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/app_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_nickname_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="click"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_username_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="Flyhooo"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/app_line_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_sex_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="click"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_username_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="保密"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/app_line_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_introduct_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="click"
                android:orientation="horizontal"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_introduc_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="个人简介"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="我就是我，不一样的烟火！"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/app_line_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_character_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="click"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_tag_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="身份类型"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="画家"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/app_line_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_phone_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="click"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_phone_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="手机号码"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="18562656666"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/app_line_gray" />

            <RelativeLayout
                android:id="@+id/Userinfo_email_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="click"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/userinfo_email_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="邮箱地址"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_big" />

                <TextView
                    android:id="@+id/userInfo_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="8054656656@qq.com"
                    android:textColor="@color/app_text_black"
                    android:textSize="@dimen/app_textsize_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
