<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:id="@+id/listitem_Question_tag_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listitem_Question_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_background"
            android:padding="3dp"
            android:text="绘画"
            android:textColor="@color/app_text_white"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/listitem_Question_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tag_background"
            android:padding="3dp"
            android:text="中国画"
            android:textColor="@color/app_text_white"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/listitem_Question_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_background"
            android:padding="3dp"
            android:text="儿童"
            android:textColor="@color/app_text_white"
            android:textSize="@dimen/app_textsize_small" />
        <TextView
            android:id="@+id/listitem_Question_tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_background"
            android:padding="3dp"
            android:text="儿童"
            android:layout_margin="10dp"
            android:textColor="@color/app_text_white"
            android:textSize="@dimen/app_textsize_small" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listitem_Question_userImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/listitem_Question_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/listitem_Question_userImg"
            android:text="阿萨德"
            android:textColor="@color/app_text_black"
            android:textSize="@dimen/app_textsize_normal" />

        <TextView
            android:id="@+id/listitem_Question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listitem_Question_userName"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/listitem_Question_userImg"
            android:text="2014-10-11 10:32"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/listitem_Question_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_address"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:text="合肥市"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_textsize_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/listitem_Question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="阿萨德风口浪尖阿萨德发快接啊昆仑山的房间拉萨的离开房间爱乐山大佛"
        android:textColor="@color/app_text_black"
        android:textSize="@dimen/app_textsize_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_Question_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/listitem_Question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="阿萨德风口浪尖阿萨德发快接啊昆仑山的房间拉萨的离开房间爱乐山大佛阿萨德风口浪尖阿萨德发快接啊昆仑山的房间拉萨的离开房间爱乐山大佛房间拉萨的离开房间爱乐山大佛阿萨德风口萨的离开房间爱乐山大佛房间拉萨德风口离..."
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_textsize_normal" />

    </LinearLayout>
</LinearLayout>
